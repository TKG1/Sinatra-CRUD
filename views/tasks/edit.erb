<h1>編集</h1>

<form action="/tasks/<%= @task.id %>" method="post">
    <label>名称</label>
    <input type="text" name="name" value="<%= @task.name %>">
    <label>内容</label>
    <textarea name="content"><%= @task.content %></textarea>
    <input type="hidden" name="_method" value="PATCH">
    <button type="submit">更新</button>
</form>